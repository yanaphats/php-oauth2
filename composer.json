{
    "name": "sandbox-dev/oauth2",
    "description": "OAuth 2.0 Client Library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Sandbox"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^6.0 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "keywords": [
        "oauth",
        "oauth2",
        "authorization",
        "authentication",
        "idp",
        "identity",
        "sso",
        "single sign on"
    ],
    "autoload": {
        "psr-4": {
            "Sandbox\\OAuth2\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sandbox\\OAuth2\\Test\\": "test/src/"
        }
    }
}
